<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:id="@+id/coordinatorlayout"
    tools:context="amarnehsoft.com.debits.activities.entriesActivities.AddEditPeronActivity">

    <EditText
        android:id="@+id/txtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border2"
        android:hint="@string/currency"
        android:padding="10dp"
        android:singleLine="true"
        android:textAlignment="center" />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:background="@drawable/border2"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Equals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gary"/>
        <EditText
            android:id="@+id/txtEqu"
            android:inputType="numberDecimal"
            android:padding="10dp"
            android:background="@drawable/border_flat"
            android:textAlignment="center"
            android:layout_weight="1"
            android:hint="0.0"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gary"/>
        <TextView
            android:id="@+id/defualtCurTextView"
            android:text="@string/nis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:id="@+id/btnSave"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_layout1"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="@string/save"
        android:layout_height="wrap_content"/>

</LinearLayout>
